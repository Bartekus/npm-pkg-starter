{
  "compilerOptions": {
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "noImplicitAny": false,
    "outDir": "./dist/",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": ["@types", "node_modules/@types"]
  },
  "exclude": ["dist", "node_modules/**"],
  "include": ["src/**/*"]
}
