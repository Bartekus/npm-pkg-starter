{
  "name": "npm-pkg-starter",
  "version": "0.0.0-semantically-released",
  "description": "An npm node package starter",
  "main": "index.js",
  "engines": {
    "node": "10",
    "npm": "6"
  },
  "scripts": {
    "commit": "git-cz",
    "coverage": "npm test -- --coverage",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "lint": "tslint --fix --project tsconfig.json -c tslint.json 'src/**/*.{ts,tsx}' 'test/**/*.ts'",
    "report": "cat ./coverage/lcov.info | codecov",
    "test": "jest --env=jsdom --colors --verbose",
    "test:watch": "npm test -- --watch",
    "travis-deploy-once": "travis-deploy-once"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bartekus/npm-pkg-starter.git"
  },
  "author": "Bartek Kus <bartekus@gmail.com> (https://bartekus.com/)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Bartekus/npm-pkg-starter/issues"
  },
  "homepage": "https://github.com/Bartekus/npm-pkg-starter#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "23.3.10",
    "codecov.io": "0.1.6",
    "commitizen": "3.0.5",
    "cz-conventional-changelog": "2.1.0",
    "husky": "0.10.2",
    "jest": "23.6.0",
    "jest-cli": "23.6.0",
    "jsdom": "13.0.0",
    "lint-staged": "8.1.0",
    "opn-cli": "4.0.0",
    "semantic-release": "15.12.4",
    "travis-deploy-once": "5.0.9",
    "ts-jest": "23.10.5",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.17.0",
    "typescript": "3.2.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again",
      "pre-push": "npm run lint && npm run test && npm run coverage"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testURL": "http://localhost/",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js,jsx}"
    ],
    "roots": [
      "./src"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  }
}
